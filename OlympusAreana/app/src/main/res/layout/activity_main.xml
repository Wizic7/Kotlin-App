<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Welcome to my Application!"
        android:textColor="#4CAF50"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivMan"
        android:layout_width="83dp"
        android:layout_height="74dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="656dp"
        android:tintMode="src_in"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        app:tint="#3F51B5" />

    <SeekBar
        android:id="@+id/sbVertical"
        android:layout_width="348dp"
        android:layout_height="22dp"
        app:layout_constraintStart_toStartOf="@+id/tvVertical"
        app:layout_constraintTop_toBottomOf="@+id/tvVertical" />

    <SeekBar
        android:id="@+id/sbHorizontal"
        android:layout_width="350dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="@+id/tvHorizontal"
        app:layout_constraintTop_toBottomOf="@+id/tvHorizontal" />

    <TextView
        android:id="@+id/tvHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="Horizontal"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <TextView
        android:id="@+id/tvVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Verical"
        app:layout_constraintStart_toStartOf="@+id/tvTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>